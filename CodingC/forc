#include<stdio.h>

int main()
{
 int i,j,k,m,n;
printf("enter odd no");
scanf("%d",&n);
for(i=n/2+1;i>=1;i--)
{
for(j=1;j<=i;j++)
{
printf("*");
}
for(m=1;m<=n/2+1-i;m++)
{
printf("  ");
}
for(k=1;k<=i;k++)
{
printf("*");
}
printf("\n");
}
for(i=2;i<=n/2+1;i++)
{
for(j=1;j<=i;j++)
{
printf("*");
}
for(m=1;m<=n/2+1-i;m++)
{
printf("  ");
}
for(k=1;k<=i;k++)
{
printf("*");
}
printf("\n");
}

return 0;
}


